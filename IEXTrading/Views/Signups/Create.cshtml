@model IEXTrading.Models.Signup

@{
    ViewData["Title"] = "Create";
}
<head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700,500"
          rel="stylesheet"
          type="text/css" />
    <link rel="stylesheet"
          type="text/css"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Fredoka+One|Pacifico|Roboto&display=swap" rel="stylesheet">
</head>
<body>
    <div class="head">
        <div class="logo">
            <img src="img/usf-logo-png-2.png" alt="img/placeholder.png" height="150">
        </div>
        <div class="head">
            <div> <h1 class="home_about_dataset" align="center">Drug Related Deaths</h1> </div>
        </div>
        <!-- Navigation bar begins -->
        <div class="navigation-bar">
            <ul class="navbar-nav">
                <li class="navitem"><a class="active" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="navitem"><a class="" asp-area="" asp-controller="Home" asp-action="Read_rec_data">Data</a></li>
                <li class="navitem"><a class="" asp-area="" asp-controller="Home" asp-action="Chart">Visualizations</a></li>
                <li class="navitem"><a class="" asp-area="" asp-controller="Signups" asp-action="Create">CRUD</a></li>
                <li class="navitem"><a class="" asp-area="" asp-controller="Home" asp-action="HelloIndex">About Us</a></li>
            </ul>
        </div>
        <!-- Navigation bar ends -->
    </div>
    <h1>CREATE</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="customer_id" class="control-label">Age</label>
                    <input asp-for="customer_id" class="form-control" />
                    <span asp-validation-for="customer_id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="first_name" class="control-label">Sex</label>
                    <input asp-for="first_name" class="form-control" />
                    <span asp-validation-for="first_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="last_name" class="control-label">Location</label>
                    <input asp-for="last_name" class="form-control" />
                    <span asp-validation-for="last_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="age" class="control-label">Description of Injury</label>
                    <input asp-for="age" class="form-control" />
                    <span asp-validation-for="age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Cause of Death</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back</a>
    </div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
